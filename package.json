    "@types/jest": "^24.0.22",
    "@types/leaflet": "^1.5.5",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-leaflet": "^2.5.0",
    "@types/sockjs-client": "^1.1.1",
    "csv-parse": "^4.6.5",
    "csv.macro": "^1.0.1",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.9",
    "i18next": "^17.3.1",
    "i18next-browser-languagedetector": "^4.0.1",
